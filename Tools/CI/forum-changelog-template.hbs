  {{title}}{{#if tag}} - {{isoDate}}{{/if}}
  {{#if summary}}
    {{summary}}
  {{/if}}

  {{#if merges}}
    Merged

    {{#each merges}}
      - {{{message}}} {{#if href}}[`#{{id}}`]({{href}}){{/if}}
    {{/each}}
  {{/if}}

  {{#if fixes}}
